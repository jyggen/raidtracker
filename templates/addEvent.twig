<div class="modal hide fade" id="addEvent" tabindex="-1" role="dialog" aria-labelledby="addEventLabel" aria-hidden="true">
	<form action="/event/" method="POST" id="addEventForm">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<h3 id="addEventLabel">Add Event</h3>
		</div>
		<div class="modal-body">
			<label>Date (YYYY-MM-DD)</label>
			<input name="date" type="date" value="{{ "NOW"|date("Y-m-d") }}">
			<legend>Attendance</legend>
			{% for player in players %}
				<label>{{ player.name }}</label>
				<select name="attendance-{{ player.id }}">
					<option value="0">- skip -</option>
					<option value="OUT">OUT</option>
					<option valUE="STANDBY">STANDBY</option>
					<option value="OFFSPEC">OFFSPEC</option>
					<option value="CONFIRMED">CONFIRMED</option>
				</select>
			{% endfor %}
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<button type="submit" class="btn btn-primary">Add</button>
		</div>
	</form>
</div>